<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context="projectetaxi.etaxi_v1.DriverLoginActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Driver Login"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/colorBlack"
        android:padding="10dp"
        android:id="@+id/tvDriverLogin"
        android:layout_marginTop="50dp" />

    <EditText
        android:id="@+id/etDriverEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/email_icon"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/email_icon"
        android:ems="10"
        android:hint="email"
        android:paddingLeft="20dp"
        android:inputType="textEmailAddress"
        android:layout_marginTop="34dp" />

    <EditText
        android:id="@+id/etDriverPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/password_icon"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/password_icon"
        android:ems="10"
        android:hint="password"
        android:paddingLeft="20dp"
        android:inputType="textPassword"
        android:textColor="@color/colorBlack" />

    <Button
        android:id="@+id/btDriverLogin"
        style="@style/button_style_black"
        android:textColor="@color/colorWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Log in"
        android:layout_marginTop="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Not a Member?"
        android:textSize="15sp"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="30dp"
        android:id="@+id/tvNotMember" />

    <Button
        android:id="@+id/btDriverRegister"
        style="@style/button_style_black"
        android:layout_width="112dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Register"
        android:textColor="@color/colorWhite" />

</LinearLayout>