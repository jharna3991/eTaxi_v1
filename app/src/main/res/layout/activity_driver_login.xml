<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    tools:context="projectetaxi.etaxi_v1.DriverLoginActivity">

    <TextView
        android:id="@+id/tvDriverLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/yellow_button"
        android:padding="15dp"
        android:text="DRIVER LOGIN"
        android:textColor="@color/colorBlackFade"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        style="@style/edit_text_style"
        android:id="@+id/etDriverEmail"
        android:drawableLeft="@drawable/email_icon"
        android:drawableStart="@drawable/email_icon"
        android:hint="Email"
        android:backgroundTint="@color/colorBlackFade"
        android:inputType="textEmailAddress"/>

    <EditText
        style="@style/edit_text_style"
        android:id="@+id/etDriverPassword"
        android:drawableLeft="@drawable/password_icon"
        android:drawableStart="@drawable/password_icon"
        android:hint="Password"
        android:backgroundTint="@color/colorBlackFade"
        
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/btDriverLogin"
        style="@style/button_style_yellow"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:text="Log in"
        android:textStyle="bold"
        android:textColor="@color/colorBlackFade" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Not a Member?"
        android:layout_margin="10dp"
        android:textSize="15sp"
        android:textColor="@color/colorBlackFade"
        android:layout_marginTop="30dp"
        android:id="@+id/tvNotMember" />

    <Button
        android:id="@+id/btDriverRegister"
        style="@style/button_style_black"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Register"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary" />

</LinearLayout>