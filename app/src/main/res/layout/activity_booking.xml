<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/taxi_booking">

    <Button
        style="@style/button_style_yellow"
        android:id="@+id/btDestination"
        android:textColor="@color/colorBlackFade"
        android:layout_width="172dp"
        android:layout_height="wrap_content"
        android:text="Destination"
        android:layout_marginTop="100dp"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="20sp"/>


    <Button
        android:id="@+id/btNearbyDriver"
        style="@style/button_style_white"
        android:layout_width="199dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="Near By Driver"
        android:textStyle="bold"
        android:textSize="20sp" />


    <Button
        style="@style/button_style_green"
        android:id="@+id/btCalculatePrice"
        android:layout_width="204dp"
        android:textColor="@color/colorWhite"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="15dp"
        android:text="Calculate Price"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <!--<Switch-->
        <!--android:id="@+id/swShareable"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="20dp"-->
        <!--android:layout_marginLeft="250dp"-->
        <!--android:text="Shareable "-->
        <!--android:textColor="@color/colorWhite"-->
        <!--android:textStyle="bold"/>-->

    <Button
        style="@style/button_style_yellow"
        android:id="@+id/btBookTaxi"
        android:textColor="@color/colorBlackFade"
        android:layout_width="148dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:text="Book"
        android:padding="20dp"
        android:layout_marginTop="100dp"
        android:textStyle="bold"
        android:textSize="20sp"/>



</LinearLayout>