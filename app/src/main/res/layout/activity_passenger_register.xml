<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context="projectetaxi.etaxi_v1.PassengerRegisterActivity">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="50dp"
            android:text="Passenger Registration"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@color/colorBlack"/>

    <EditText
        android:id="@+id/etPassengerName"
        style="@style/edit_text_style"
        android:backgroundTint="@color/colorBlack"
        android:drawableLeft="@drawable/person_icon"
        android:drawableStart="@drawable/person_icon"
        android:hint="name"
        android:inputType="textPersonName" />

    <EditText
            style="@style/edit_text_style"
            android:id="@+id/etPassengerEmail"
            android:drawableLeft="@drawable/email_icon"
            android:drawableStart="@drawable/email_icon"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:backgroundTint="@color/colorBlack"/>

        <EditText
            style="@style/edit_text_style"
            android:id="@+id/etPassengerPassword"
            android:drawableLeft="@drawable/password_icon"
            android:drawableStart="@drawable/password_icon"
            android:hint="Password"
            android:backgroundTint="@color/colorBlack"
            android:inputType="textPassword" />

        <EditText
            style="@style/edit_text_style"
            android:id="@+id/etPassengerMobileNum"
            android:drawableLeft="@drawable/mobile_icon"
            android:drawableStart="@drawable/mobile_icon"
            android:hint="Mobile Number"
            android:inputType="text"
            android:backgroundTint="@color/colorBlack"/>

        <EditText
            style="@style/edit_text_style"
            android:id="@+id/etPassengerAddress"
            android:drawableLeft="@drawable/address_icon"
            android:drawableStart="@drawable/address_icon"
            android:hint="Address"
            android:inputType="text"
            android:backgroundTint="@color/colorBlack"/>

        <Button
            android:id="@+id/btPassengerRegister"
            style="@style/button_style_black"
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Register"
            android:textColor="@color/colorWhite" />
</LinearLayout>
