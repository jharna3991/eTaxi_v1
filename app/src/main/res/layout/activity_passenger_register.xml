<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    tools:context="projectetaxi.etaxi_v1.PassengerRegisterActivity">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="50dp"
            android:text="REGISTRATION"
            android:textColor="@color/colorBlackFade"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="15dp"
            android:background="@drawable/yellow_button"/>

    <EditText
        android:id="@+id/etPassengerName"
        style="@style/edit_text_style"
        android:backgroundTint="@color/colorBlackFade"
        android:drawableLeft="@drawable/person_icon"
        android:drawableStart="@drawable/person_icon"
        android:hint="Name"
        android:inputType="textPersonName" />

    <EditText
            style="@style/edit_text_style"
            android:id="@+id/etPassengerEmail"
            android:drawableLeft="@drawable/email_icon"
            android:drawableStart="@drawable/email_icon"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:backgroundTint="@color/colorBlackFade"/>

        <EditText
            style="@style/edit_text_style"
            android:id="@+id/etPassengerPassword"
            android:drawableLeft="@drawable/password_icon"
            android:drawableStart="@drawable/password_icon"
            android:hint="Password"
            android:backgroundTint="@color/colorBlackFade"
            android:inputType="textPassword" />

    <EditText
        android:id="@+id/etPassengerMobileNum"
        style="@style/edit_text_style"
        android:backgroundTint="@color/colorBlackFade"
        android:digits="1234567890"
        android:drawableLeft="@drawable/mobile_icon"
        android:drawableStart="@drawable/mobile_icon"
        android:hint="Mobile Number"
        android:maxLength="10"
        android:inputType="phone" />

    <EditText
            style="@style/edit_text_style"
            android:id="@+id/etPassengerAddress"
            android:drawableLeft="@drawable/address_icon"
            android:drawableStart="@drawable/address_icon"
            android:hint="Address"
            android:inputType="text"
            android:backgroundTint="@color/colorBlackFade"/>

    <Button
        android:id="@+id/btPassengerRegister"
        style="@style/button_style_black"
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:text="Register"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary" />
</LinearLayout>
