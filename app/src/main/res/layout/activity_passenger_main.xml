<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="projectetaxi.etaxi_v1.PassengerMainActivity">

    <TextView
        android:id="@+id/tvPassName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="28dp"
        android:textSize="16sp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="22dp"
        android:text="Name" />

    <TextView
        android:id="@+id/tvPassEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Email"
        android:layout_below="@+id/ibPassSetting"
        android:layout_alignLeft="@+id/tvPassName"
        android:layout_alignStart="@+id/tvPassName" />

    <Button
        android:id="@+id/btBookTaxi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book a Taxi"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btPassHistory"
        android:layout_toEndOf="@+id/btPassHistory"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp" />

    <Button
        android:id="@+id/btPassHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="History"
        android:layout_alignBaseline="@+id/btBookTaxi"
        android:layout_alignBottom="@+id/btBookTaxi"
        android:layout_alignLeft="@+id/tvPassEmail"
        android:layout_alignStart="@+id/tvPassEmail" />

    <Button
        android:id="@+id/btAboutUs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About Us"
        android:layout_alignBottom="@+id/ibPassLogout"
        android:layout_toLeftOf="@+id/ibPassLogout"
        android:layout_toStartOf="@+id/ibPassLogout"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp" />

    <ImageButton
        android:id="@+id/ibPassLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logout_icon"
        android:layout_alignBottom="@+id/btBookTaxi"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp" />

    <ImageButton
        android:id="@+id/ibPassSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/setting_icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
