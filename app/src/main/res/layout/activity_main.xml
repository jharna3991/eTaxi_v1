<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="projectetaxi.etaxi_v1.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/ivtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            app:srcCompat="@drawable/title" />

        <ImageView
            android:id="@+id/ivPassengerTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            app:srcCompat="@drawable/passenger"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/btPassenger"
            style="@style/button_style_yellow"
            android:layout_width="match_parent"
            android:layout_marginBottom="24dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:text="Passenger"
            android:textAlignment="center" />


        <ImageView
            android:id="@+id/ivDriverTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/driver"
            android:layout_marginTop="16dp" />


        <Button
            android:id="@+id/btDriver"
            style="@style/button_style_yellow"
            android:layout_width="match_parent"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:text="Driver"
            android:textAlignment="center" />


    </LinearLayout>

</RelativeLayout>
