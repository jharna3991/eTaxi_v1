<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="projectetaxi.etaxi_v1.UserSelectActivity"
    android:weightSum="1"
    android:background="@drawable/blur_background">

    <ImageView
        android:id="@+id/ivtitle"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        app:srcCompat="@drawable/title"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp" />

    <ImageView
        android:id="@+id/ivDriverTitle"
        android:layout_width="170dp"
        android:layout_height="126dp"
        android:layout_gravity="left"
        app:srcCompat="@drawable/taxi_yellow_icon"
        android:layout_marginTop="76dp"
        android:layout_below="@+id/ivtitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btDriver"
        style="@style/button_style_black"
        android:layout_width="178dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:text="Driver"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="7dp"
        android:layout_below="@+id/ivDriverTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/ivPassengerTitle"
        android:layout_width="175dp"
        android:layout_height="161dp"
        android:layout_gravity="end"
        app:srcCompat="@drawable/passenger"
        android:layout_below="@+id/btDriver"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/btPassenger"
        style="@style/button_style_yellow"
        android:layout_width="151dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="Passenger"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_below="@+id/ivPassengerTitle"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp" />

</RelativeLayout>
